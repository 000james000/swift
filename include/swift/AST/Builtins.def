BUILTIN_BINARY_OPERATION(FAdd,    "fadd",     FloatOrVector)
BUILTIN_BINARY_OPERATION(And,     "and",      IntegerOrVector)
BUILTIN_BINARY_OPERATION(AShr,    "ashr",     IntegerOrVector)
BUILTIN_BINARY_OPERATION(LShr,    "lshr",     IntegerOrVector)
BUILTIN_BINARY_OPERATION(Or,      "or",       IntegerOrVector)
BUILTIN_BINARY_OPERATION(FDiv,    "fdiv",     FloatOrVector)
BUILTIN_BINARY_OPERATION(Mul,     "mul",      IntegerOrVector)
BUILTIN_BINARY_OPERATION(FMul,    "fmul",     FloatOrVector)
BUILTIN_BINARY_OPERATION(SDiv,    "sdiv",     IntegerOrVector)
BUILTIN_BINARY_OPERATION(ExactSDiv, "sdiv_exact", IntegerOrVector)
BUILTIN_BINARY_OPERATION(Shl,     "shl",      IntegerOrVector)
BUILTIN_BINARY_OPERATION(SRem,    "srem",     IntegerOrVector)
BUILTIN_BINARY_OPERATION(Sub,     "sub",      IntegerOrVector)
