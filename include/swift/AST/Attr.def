//
// This file defines macros used for macro-metaprogramming with attributes.
//
//===----------------------------------------------------------------------===//

#ifndef ATTR
#define ATTR(X)
#endif

#ifndef TYPE_ATTR
#define TYPE_ATTR(X)
#endif

#ifndef BOTH_ATTR
#define BOTH_ATTR(X) ATTR(X) TYPE_ATTR(X)
#endif

// Type attributes
TYPE_ATTR(auto_closure)
TYPE_ATTR(inout)
TYPE_ATTR(cc)
TYPE_ATTR(noreturn)
TYPE_ATTR(objc_block)
TYPE_ATTR(thin)


// SIL-specific attributes
TYPE_ATTR(sil_self)
TYPE_ATTR(local_storage)
TYPE_ATTR(sil_unowned)
TYPE_ATTR(sil_weak)

ATTR(assignment)
ATTR(class_protocol)
ATTR(conversion)
ATTR(exported)
ATTR(infix)
ATTR(resilient)
ATTR(fragile)
ATTR(born_fragile)
ATTR(asmname)
ATTR(noreturn)
ATTR(prefix)
ATTR(postfix)
ATTR(objc)
ATTR(optional)
ATTR(iboutlet)
ATTR(ibaction)
ATTR(transparent)
ATTR(unowned)
ATTR(weak)

#undef BOTH_ATTR
#undef TYPE_ATTR
#undef ATTR
