#!/bin/bash

TOOLCHAIN_PREFIX=$1
BUNDLE_IDENTIFIER=$2
INSTALLER_CERT=$3
INSTALLER_PACKAGE=$4
TOOLCHAIN_INSTALL_LOCATION=$5
TOOLCHAIN_VERSION=$6

pkgbuild --root "${TOOLCHAIN_PREFIX}" --install-location "${TOOLCHAIN_INSTALL_LOCATION}" "${INSTALLER_PACKAGE}" \
         --version "${TOOLCHAIN_VERSION}" --identifier "${BUNDLE_IDENTIFIER}" --sign "${INSTALLER_CERT}"